grammar Wikitext
  rule document
    chunk*
  end

  rule chunk
    bold_text / plain_text
  end

  rule bold_text
    bold_delimiter (!bold_delimiter .)* bold_delimiter
  end
  
  rule plain_text
    (!delimiter .)+ {
      def to_s
        ERB::Util::h text_value
      end
    }
  end
  
  rule delimiter
    bold_delimiter
  end
  
  rule bold_delimiter
    "'''"
  end
end